<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".VeterinariaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VeterinariaApp">

        <activity
            android:name=".ui.GestionActivity"
            android:exported="false"
            android:label="@string/title_activity_gestion"
            android:theme="@style/Theme.VeterinariaApp" />

        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.VeterinariaApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.VeterinariaApp" />

        <service
            android:name=".service.RecordatorioService"
            android:exported="false" />

        <provider
            android:name=".provider.VeterinariaProvider"
            android:authorities="com.miempresa.veterinaria.provider"
            android:exported="true"
            android:enabled="true" />

    </application>

</manifest>